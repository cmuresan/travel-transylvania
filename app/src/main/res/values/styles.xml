<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ExpandedTitleTextAppearance">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/expanded_title_text_size</item>
    </style>

    <style name="CollapsedTitleTextAppearance">
        <item name="android:textSize">@dimen/collapsed_title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
